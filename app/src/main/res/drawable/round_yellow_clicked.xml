<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#1ACCCCCC" />
        </shape>
    </item> <!-- Background -->

    <item>
        <shape
            android:shape="oval">

            <stroke
                android:width="3dp"
                android:color="@color/white"/>

            <solid android:color="@color/yellow" />

            <size
                android:width="36dp"
                android:height="36dp" />
        </shape>

    </item>

</layer-list>